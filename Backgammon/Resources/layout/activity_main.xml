<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/opening_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Top app bar (acts as Action Bar) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
        app:title="Backgammon"
        app:menu="@menu/menu1" />

    <!-- Content container BELOW the toolbar -->
    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_below="@id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- === Your existing main menu content starts here === -->

        <!-- Background image -->
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_backgammon_board"
            android:scaleType="centerCrop" />

        <!-- Optional overlay -->
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backgammon"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-light"
            android:shadowColor="#000000"
             />

        <!-- Button container -->
        <LinearLayout
            android:id="@+id/btnContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp">

            <Button
                android:id="@+id/btnSinglePlayer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Single Player"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:backgroundTint="#FFD700"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:backgroundTint="#ADFF2F"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnInstructions"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:backgroundTint="#87CEFA"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textSize="20sp"
                android:layout_margin="8dp"
                android:backgroundTint="#FF4500"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- === Your existing main menu content ends here === -->

    </RelativeLayout>

</RelativeLayout>